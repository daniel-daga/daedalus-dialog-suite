{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "daedalus-parser": ["./index.d.ts"],
      "daedalus-parser/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "bin/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "prebuilds",
    "bindings",
    "grammar.js"
  ],
  "typeRoots": [
    "node_modules/@types",
    "./types"
  ]
}